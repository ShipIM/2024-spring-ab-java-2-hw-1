<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="ShipIM" id="05-03-2024--4-create-roles-privileges-table">
        <createTable tableName="roles_privileges">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints
                        primaryKey="true"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints
                        foreignKeyName="fk_messages" references="roles(id)"
                        nullable="false"/>
            </column>
            <column name="privilege_id" type="BIGINT">
                <constraints
                        foreignKeyName="fk_images" references="privileges(id)"
                        nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>